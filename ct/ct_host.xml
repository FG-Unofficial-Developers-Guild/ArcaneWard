<root>
	<windowclass name="combattracker_host" merge="join">
		<sheetdata>
			<label_ct name="label_init">
				<anchored offset="180,3"/>
			</label_ct>
			<label_ct name="label_hp">
				<anchored  offset="135,3" />
			</label_ct>
			<label_ct name="label_temp">
				<anchored offset="95,3"/>
			</label_ct>
			<label_ct name="label_arcaneward">
					<anchored to="header_labels" position="insidetopright" offset="55,3" width="30" />
					<static textres="ct_label_arcaneward" />
					<center />
			</label_ct>
		</sheetdata>
	</windowclass>


	<windowclass name="ct_entry" merge="join">
		<script file="ct/scripts/ct_entry.lua" />
		<sheetdata>
			<number_ct_crosslink name="wounds" merge="join">
				<tabtarget prev="arcaneward" next="strength" />
			</number_ct_crosslink>
			<number_ct_crosslink name="arcaneward" merge="add" insertbefore="hptemp">
				<anchored to="rightanchor" width="30" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<color>4B0082</color>
				<hideonvalue value="0" />
				<tabtarget prev="hptemp" next="wounds" />
				<script>
					function handleDrop(draginfo)
						if draginfo.getNumberData() &gt; 0 then
							setValue(draginfo.getNumberData());
						else
							setValue(getValue() + draginfo.getNumberData());
						end
					end

					function update()
						window.onHealthChanged();
					end
				</script>
			</number_ct_crosslink>
			<number_ct_crosslink name="hptemp" merge="join">
				<tabtarget prev="hptotal" next="arcaneward" />
			</number_ct_crosslink>
		</sheetdata>
	</windowclass>
</root>
